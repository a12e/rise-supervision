
<div class="container">
	<div class="col-md-12">
		<p id="notice"><%= notice %></p>
	</div>

	<div class="col-md-12">
		<h1 class="well">Listing Hosts</h1>
	</div>

	<div class="col-md-12">
		<table class="table">
			<thead>
				<tr>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @hosts.each do |host| %>
					<tr>
						<td><%= link_to 'Show', host %></td>
						<td><%= link_to 'Edit', edit_host_path(host) %></td>
						<td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="col-md-12">
		<%= link_to 'New Host', new_host_path, :class => 'btn btn-primary', :role => 'button' %>
	</div>
</div>
